<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sw1"
    tools:context=".presentation.screens.SignUpFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="200dp"
            android:paddingBottom="10dp"/>

        <EditText
            android:id="@+id/passwordTextInput"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/usernameTextInput"
            android:ems="12"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableStart="@drawable/outline_key_24"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@id/emailTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/emailTextInput"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/usernameTextInput"
            android:ems="12"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/baseline_alternate_email_24"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@id/usernameTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <EditText
            android:id="@+id/usernameTextInput"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/signup"
            android:ems="12"
            android:hint="Username"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/outline_person_24"
            android:drawablePadding="10dp"
            app:layout_constraintTop_toBottomOf="@id/signup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:backgroundTint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/passwordTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
